<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myEducation.inside.model.Role">

	<sql id="table">role</sql>
	<sql id="columns">id,name,status,createtime,updatetime</sql>
	
	<insert id="insert">
		insert into <include refid="table"></include>(name,status)
		values(#{name},#{status})
	</insert>
	<update id="update">
		update <include refid="table"></include> 
		set name = #{name},status=#{status}
		where id = #{id}
	</update>
	<select id="selectById" resultType="Role">
		select <include refid="columns"></include> from <include refid="table"></include>
		where id = #{id}
	</select>
	
	<select id="selectNameByUserId" resultType="String">
		select group_concat(role.name) from userrole
		join role on role.id = userrole.roleid
		where userid = #{userId}
	</select>
</mapper>