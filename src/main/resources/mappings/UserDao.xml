<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myEducation.inside.dao.UserDao">
    
    <sql id="table">user</sql>
    <sql id="Columns">
    	id,username,password,status,isAdmin,entrytime,updatetime
    </sql>
	
	<select id="getByName" resultType="User">
		select * from <include refid="table"/>
		where username = #{username}
	</select>
	
	<select id="getById" resultType="User">
		select * from<include refid="table"/>
		where id=#{id}
	</select>
	
	<select id="selectByPage" resultType="User">
		select * from <include refid="table"/>
		<where>
			<if test="params.username != null and params.username != ''">
				username like CONCAT(CONCAT('%', #{params.username}), '%')
			</if>
		</where>
		order by entrytime asc
	</select>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="User">
		insert into <include refid="table"/>(
			username,password,status,isAdmin
		) values (
			#{username},
			#{password},
			#{status},
			#{isAdmin}
		)
	</insert>
	
	<update id="update">
		update <include refid="table"/> 
		set 
			username=#{username},
			password=#{password},
			status=#{status},
			isAdmin=#{isAdmin}
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from <include refid="table"/>
		where id=#{id}
	</delete>
</mapper>