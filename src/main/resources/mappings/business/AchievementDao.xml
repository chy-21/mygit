<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myEducation.inside.dao.business.AchievementDao">

	<sql id="table">achievement</sql>
	<sql id="columns">id,subject,midterm,terminal,createtime,stu_id</sql>
	
	<select id="getByStuId" resultType="Achievement">
		select * from <include refid="table"></include>
		where stu_id = #{stu_id}
	</select>
	
