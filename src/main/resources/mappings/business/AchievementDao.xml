<!-- 			stu_id=#{stu_id} -->
<!-- 		</where> -->
<!-- 		order by entrytime asc -->
<!-- 	</select> -->
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="Student">
		insert into <include refid="table"/>(
			subject,midterm,terminal,stu_id
		) values (
			#{subject},#{midterm},#{terminal},#{stu_id}
		)
	</insert>
	
	<update id="update">
		update <include refid="table"/> 
		set 
			subject = #{subject},
			midterm = #{midterm},
			terminal = #{terminal},
			stu_id = #{stu_id}
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from <include refid="table"/>
		where id=#{id}
	</delete>
</mapper>