<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myEducation.inside.dao.business.TeacherDao">
    
    <sql id="table">teacher</sql>
    <sql id="Columns">
    	id,name,sex,age,synopsis,s_id,g_id,c_id,entrytime,updatetime
    </sql>
	
	<select id="selectByName" resultType="Teacher">
		select * from <include refid="table"/>
		where name = #{name}
	</select>
	
	<select id="getById" resultType="Teacher">
		select * from <include refid="table"/>
		where id=#{id}
	</select>
	
	<select id="selectByPage" resultType="Teacher">
		select Teacher.*,s.name as sName,g.name as gName,c.name as cName
		from <include refid="table"/>
		left join school s on teacher.s_id = s.id
		left join s_grade g on teacher.g_id = g.id
		left join s_class c on teacher.c_id = c.id
		<where>
			<if test="params.startTime != null and params.startTime != ''">
				<![CDATA[ entrytime > #{params.startTime} AND entrytime <= #{params.endTime} ]]>
			</if>
			<if test="params.name != null and params.name != ''">
				and teacher.name like CONCAT(CONCAT('%', #{params.name}), '%')
			</if>
		</where>
		order by updatetime desc
	</select>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="Teacher">
		insert into <include refid="table"/>(
			name,sex,age,synopsis,s_id,g_id,c_id
		) values (
			#{name},#{sex},#{age},#{synopsis},#{s_id},#{g_id},#{c_id}
		)
	</insert>
	
	<update id="update">
		update <include refid="table"/> 
		set 
			name=#{name},
			sex=#{sex},
			age=#{age},
			synopsis=#{synopsis},
			s_id=#{s_id},
			g_id=#{g_id},
			c_id=#{c_id}
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from <include refid="table"/>
		where id=#{id}
	</delete>
	
